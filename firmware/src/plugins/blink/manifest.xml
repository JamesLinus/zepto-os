<smartanthill.plugin id="blink" name="Blink" version="1.0">

  <description>Blinks a LED</description>

  <response>
    <field name="result" type="encoded-uint[max=1]" min="0" max="1" />
  </response>

  <configuration>

    <peripheral>
      <pin type="digital" name="pin_led" title="LED pin" />
    </peripheral>

    <options>
      <option type="uint[2]" name="delay_ms" default="200" title="Delay between blinks, ms" />
      <option type="uint[1]" name="total_blinks" default="5" title="Total blinks" />
    </options>

  </configuration>

</smartanthill.plugin>
