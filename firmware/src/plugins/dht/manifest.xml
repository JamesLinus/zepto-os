<smartanthill.plugin id="dht" name="DHT sensor" version="1.0">

  <description>The plugin allows read temperature from DHT sensor</description>
    <response>
        <field name="ok" type="encoded-uint[max=1]" min="0" max="40" />
    </response>

  <configuration>
    <peripheral>
      <pin name="dht_pin" type="digital" title="DHT pin" />
    </peripheral>
  </configuration>

</smartanthill.plugin>
